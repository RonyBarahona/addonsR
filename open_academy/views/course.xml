<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>   

        <record model="ir.ui.view" id="open_academy.course">
            <field name="name">course list</field>
            <field name="model">open_academy.course</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>    

        <!-- open_academy_course form view -->
        <record id="open_academy_course_view_form" model="ir.ui.view">
            <field name="name">open_academy_course.view.form</field>
            <field name="model">open_academy.course</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <field name="name" placeholder="Una breve descripcion "/>
                        </group>
                        <notebook>
                            <page name="description" string="Description">
                            <field name="description" />
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_list_course">
            <field name="name">Course</field>
            <field name="res_model">open_academy.course</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_open_academy"  name="Course" sequence="10"/>
        <menuitem id="menu_course" parent="menu_open_academy" name="Course" sequence="10"
                action="action_list_course"/>
    </data>

</odoo>


